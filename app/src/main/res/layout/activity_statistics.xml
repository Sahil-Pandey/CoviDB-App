<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatisticsActivity"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/countrystatisticsbackground">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="-30dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/logo1"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="-25dp"
            android:layout_marginStart="-30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/logo1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

         <TextView
             android:id="@+id/statisticsAppName"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:elevation="2dp"
             android:text="CovidDB"
             android:fontFamily="@string/bold"
             android:textColor="@color/white"
             android:textSize="22dp"/>
            <TextView
                android:id="@+id/cName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="India"
                android:fontFamily="@string/semi"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_drop"
                android:drawablePadding="7dp"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Updated at May 16 2020"
                android:fontFamily="@string/regular"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="#FFC107"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="2dp"
                                android:layout_marginStart="5dp"
                                android:text="Confirm"
                                android:fontFamily="@string/bold"
                                android:textColor="@color/white"
                                android:textSize="18dp"/>
                        </LinearLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="#2196F3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="2dp"
                                android:layout_marginStart="5dp"
                                android:text="Active"
                                android:fontFamily="@string/bold"
                                android:textColor="@color/white"
                                android:textSize="18dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="#38D30F"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="2dp"
                                android:layout_marginStart="5dp"
                                android:text="Recovered"
                                android:fontFamily="@string/bold"
                                android:textColor="@color/white"
                                android:textSize="18dp"/>
                        </LinearLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="#F40303"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="2dp"
                                android:layout_marginStart="5dp"
                                android:text="Deaths"
                                android:fontFamily="@string/bold"
                                android:textColor="@color/white"
                                android:textSize="18dp"/>
                        </LinearLayout>

                </LinearLayout>
                <org.eazegraph.lib.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="8dp"
                    app:egInnerPaddingColor="#0C4DC6"
                    app:egLegendTextSize="0sp"
                    app:egUsePieRotation="true"
                    app:egLegendHeight="0dp"
                    app:egValueTextSize="0sp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
